<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
  @author thomas.quintana@telestax.com (Thomas Quintana)
-->
<mapper namespace="org.mobicents.servlet.sip.restcomm.dao.OutgoingCallerIdDao">
  <insert id="addOutgoingCallerId" parameterType="map">
    INSERT INTO outgoing_caller_ids (sid, date_created, date_updated, friendly_name, account_sid, phone_number, uri)
    VALUES (#{sid}, #{date_created}, #{date_updated}, #{friendly_name}, #{account_sid}, #{phone_number}, #{uri});
  </insert>
  
  <select id="getOutgoingCallerId" parameterType="string" resultType="hashmap">
    SELECT * FROM outgoing_caller_ids WHERE sid=#{sid};
  </select>
  
  <select id="getOutgoingCallerIds" parameterType="string" resultType="hashmap">
    SELECT * FROM outgoing_caller_ids WHERE account_sid=#{account_sid};
  </select>
  
  <delete id="removeOutgoingCallerId" parameterType="string">
    DELETE FROM outgoing_caller_ids WHERE sid=#{sid};
  </delete>
  
  <delete id="removeOutgoingCallerIds" parameterType="string">
    DELETE FROM outgoing_caller_ids WHERE account_sid=#{account_sid};
  </delete>
  
  <update id="updateOutgoingCallerId" parameterType="map">
    UPDATE outgoing_caller_ids SET date_updated=#{date_updated}, friendly_name=#{friendly_name} WHERE sid=#{sid};
  </update>
</mapper>